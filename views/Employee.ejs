  </head>
  <body>
    <form action="Employee.ejs" method="post">
      <div class="card main container text-center bg-dark text-light p-4">
        <div class="card-body">
          <div class="row alert">
            <%=message%>
          </div>
          <div class="row">
            <div class="col-md-12"><h1 class="text-left mb-4">Add Employee</h1></div>
            
          </div>
        <div class="row">
          <div class="col-md-6">
            <div class="input-group mb-3">
              <input
                type="text"
                class="bg-dark form-control text-light"
                placeholder="First Name"
                aria-label="Username"
                aria-describedby="basic-addon1"
                name="name"
                required 
                autocomplete="off"

              />
            </div>
          </div>
          <div class="col-lg-6 pb-3">
            <label for="did">Department :</label>
              <select name="did" class="bg-dark text-light">
                <%departmentslist.forEach(function(dep){%>
                  <option value='<%=dep._id%>'><%=dep.name%></option>
                <%}) %>
                
              </select>
          </div>
        </div>
        <div class="row k mt-1">
          <input
            class="bg-dark form-control text-light"
            type="text"
            placeholder="Address"
            name="address"
            required 
            autocomplete="off"

          />
        </div>

        <div class="row mt-3">
          <div class="input-group">
            <input
              class="bg-dark form-control text-light"
              type="email"
              placeholder="Email Address"
              name="email"
              required
              autocomplete="off" 

            />
            
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 col-sm-12">
            <a class="btn btn-success mt-5 btn-block font-weight-bold" href="/">Return back</a>
          </div>
          <div class="col-md-6 col-sm-12">
            <button class="btn btn-success mt-5 btn-block font-weight-bold">
              Add
             </button>
          </div>
        </div>
      </div>
    </form>
        </div>
        


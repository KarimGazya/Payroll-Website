    <title>Department</title>
  </head>
  <body>
    
    <form action="Search.ejs" method="post">
      <div class="card search container-fluid text-center bg-dark text-light p-2">
        <div class="card-body">
          <div class="row alert">
            <%=message%>
          </div>
          <div class="row">
            <h1 class="text-left mb-4 col">Search</h1>
          </div>
          <div class="text-left row mt-3">
            <label class="mb-3">Department</label>
            <div class="choice">
            
              <select onchange="location = this.options[this.selectedIndex].value;" name="department" class="choose bg-dark text-light">
                <option value="noDepartment" selected><%=Department%></option>
                <%departmentList.forEach(function(dep){%>
                  <option value="/Search.ejs?q=<%=dep._id%>&name=<%=dep.name%>"><%=dep.name%></option>
                <%}) %>
                
              </select>
              
            </div>
          </div>
          
        
        <div class="text-left row mt-3">
            <label class="mb-3">Employee</label>
            <div class="choice">
            
              <select name="Name" class="choose bg-dark text-light">
                <option value="noEmployee" selected>--Choose Employee--</option>
                <%EmployeesList.forEach(function(emp){%>
                  <option value=<%=emp._id%>><%=emp.name%></option>
                <%}) %>
                
              </select>
              
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 col-sm-12">
              <a class="btn btn-success mt-5 btn-block font-weight-bold" href="/">Return back</a>
            </div>
            <div class="col-md-6 col-sm-12">
              <button class="btn btn-success mt-5 btn-block font-weight-bold">
                Search
               </button>
            </div>
          </div>
        

          
      
    </form>

    <div class="container p-6">
      <div class="table row">
        <table class="mt-5">
        <tr>
            <th>Name</th>
            <th>Email Address</th>
            <th>Department</th>
            <th>Options</th>
        </tr>
        <%Employee.forEach(function(emp){%>
          <tr>
            <td class="cell col-sm-4"><%=emp.name%></td>
            <td class="cell col-sm-4 "><%=emp.email%></td>
            <td class="cell col-sm-4"><%=departments%></td>
            <td class="container pr-5">
              <div class="row">
                <div class="col-lg-1"><a href="/options.ejs?q=<%=emp._id%>" class="icon"><i class="fa-regular fa-plus"></i></a></div>
                <div class="col-lg-1"><a href="Edit.ejs?q=<%=emp._id%>" class="icon"><i class="fa-solid fa-user-pen"></i></a></div>
                <div class="col-lg-1"><a href="/Search.ejs?q=<%=emp._id%>&o=delete" class="icon"><i class="fa-solid fa-xmark "></i></a></div>
              </div>
            </td>
        </tr>
        <%})%>
        
    </table>
    </div>
    </div>

    
        
    

